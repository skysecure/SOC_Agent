# Server
PORT=3002
ORG_NAME=Security Operations Center

# AI provider (choose one; keep both keys if you switch)
AI_PROVIDER=gemini
GEMINI_API_KEY=your_gemini_api_key
OPENAI_API_KEY=your_openai_api_key

# Azure global endpoints (per-tenant creds live in backend/config/tenants.json)
AZURE_LOGIN_URL=https://login.microsoftonline.com
AZURE_MANAGEMENT_API_URL=https://management.azure.com
SENTINEL_API_VERSION=2024-01-01-preview

# Email (global sender, used for all tenants)
SENDGRID_API_KEY=your_sendgrid_api_key
SENDGRID_FROM_EMAIL=noreply@yourdomain.com

# Optional: SSE & debug
SENTINEL_DEBUG=false
SSE_HEARTBEAT_MS=20000
SSE_GLOBAL_HISTORY=200
SSE_PIPELINE_HISTORY=100
